              <i class="fa fa-map-marker"></i>
              <span><strong>Colombia</strong> <br />Calle 40f # 40a-21
                <br />Apto 201 <br /> Medellin - Antioquia</span>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="contact-info clearfix">
              <i class="fa fa-phone"></i>
              <span id="contact-info-phone">443-494-9228</span>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="contact-info clearfix">
              <i class="fa fa-map-marker"></i>
              <span><strong>USA</strong><br /> 959 W. Moorhead Circle<br />
                Apt #D
                <br />Boulder, CO 80305</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="contact-form" class="row">

      <div class="col-md-8 col-md-offset-2">

        <div id="result"></div>

        <div class="row">
          <%= render 'layouts/error_messages', object: @message %>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
        </div>
        

        <form accept-charset="UTF-8" action="/" id="new_message" method="post" class="new_message contact-form">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control input-lg" name="message[name]" id="message_name" placeholder="Name" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="email" class="form-control input-lg" name="message[email]" id="message_email" placeholder="Email" requiered>
              </div>
            </div>
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="10" name="message[body]" id="message_body" placeholder="Message" requiered></textarea>
          </div>
          <div class="form-group">
            <button id="submit_btn" type="submit" class="btn btn-outline btn-big">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- End of Contact Section -->

