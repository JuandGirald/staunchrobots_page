<section class="contact-section light-section dark-content login">
  <div class="container">
    <h2>New User</h2>

    <div class="row">
      <%= render 'layouts/error_messages', object: @user %>
      <% flash.each do |key, value| %>
        <div class="alert alert-info alert-dismissible">
          <div class="alert-text">
              <%= value %>
            </div>
            <button type="button" class="close" data-dismiss="alert">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
    
    <div id="contact-form" class="row">

      <div class="col-md-8 col-md-offset-2">
        <%= form_for @user, :url => create_user_path, :html => { :class => 'contact-form'} do |f| %>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <%= f.text_field :name, placeholder: "Name", :class => 'form-control input-lg' %>
            </div>
          </div>
          <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <%= f.text_field :email, :required => true, placeholder: "Email", :class => 'form-control input-lg' %>
            </div>
          </div>
          <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <%= f.password_field :password, :required => true, placeholder: "Password", :class => 'form-control input-lg' %>
            </div>
          </div><div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <%= f.password_field :password_confirmation, :required => true, placeholder: "Password Confirmation", :class => 'form-control input-lg' %>
            </div>
          </div>
          <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <%= f.select :role, ['customer','developer', 'admin'] %>
            </div>
          </div>
        </div>
        <div class="actions form-group log-btn col-md-8 col-md-offset-2">
          <%= f.submit 'Sign up', class: 'btn btn-outline btn-big ' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>